<tr>
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item[1]),feed_item[1] %>
  </td>
  <td class="micropost">
    <span class="user">
      <%= link_to feed_item[1].name, feed_item[1]%>
    </span>
    <span class="content"><%= feed_item[0].content %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item[0].created_at) %> ago.
    </span>
    <% if current_user?(feed_item[0].user) %>
    <span class="delete_post">
        <%= link_to "delete",feed_item[0], :remote=>true, :method => :delete,
                    :confirm => "You sure?",
                    :title => feed_item[0].content %>
    </span>
  <% end %>
  </td>

</tr>