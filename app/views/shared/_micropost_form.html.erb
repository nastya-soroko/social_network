<%= form_for @micropost, :remote => true  do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
      <%= f.text_area :content %>
      <%= f.hidden_field :from_id %>
      <%= f.hidden_field :user_id %>
    </div>
    <div class="actions">
      <%= f.submit "Send" %>
    </div>
<% end %>
